<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.Image.ImageFragment">



    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/ivOpenedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Image"
        android:scaleType="fitCenter"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlImageFragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="top"
        android:background="@drawable/transparent_dark_background"
        android:elevation="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:paddingTop="6dp"
        android:paddingBottom="15dp"
        android:background="@drawable/transparent_dark_background"
        >
        <ImageButton
            android:id="@+id/ibSharePhoto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:contentDescription="Capture Private Photo"
            android:src="@drawable/baseline_share_24"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/ibDeletePhoto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:contentDescription="Capture Private Photo"
            android:src="@drawable/baseline_delete_24"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"

            />

    </LinearLayout>
</FrameLayout>